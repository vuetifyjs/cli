{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "noImplicitThis": true,
    "strict": true,
    "isolatedModules": true,
    "target": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "paths": {
      "@vuetify/cli-shared": ["./packages/shared/src"],
      "@vuetify/cli-shared/commands": ["./packages/shared/src/commands"],
      "@vuetify/cli-shared/utils": ["./packages/shared/src/utils"],
      "@vuetify/cli-shared/i18n": ["./packages/shared/src/i18n"]
    }
  },
  "include": ["./packages/**/src"]
}
