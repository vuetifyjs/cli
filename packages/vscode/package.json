{
  "publisher": "vuetifyjs",
  "name": "vuetify-vscode",
  "displayName": "Vuetify",
  "type": "module",
  "version": "1.0.3",
  "private": true,
  "categories": [
    "Snippets"
  ],
  "icon": "images/icon.png",
  "description": "Vuetify extension for Visual Studio Code",
  "author": "Andrey Yolkin <andreyyolkin@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuetifyjs/cli.git",
    "directory": "packages/vscode"
  },
  "keywords": [
    "vuetify",
    "vscode",
    "extension",
    "snippets",
    "tooling"
  ],
  "main": "./dist/extension.cjs",
  "engines": {
    "vscode": "^1.107.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vuetify.createProject",
        "title": "Create Vuetify Project",
        "category": "Vuetify"
      },
      {
        "command": "vuetify.openApiDocs",
        "title": "Open Vuetify API Documentation",
        "category": "Vuetify"
      },
      {
        "command": "vuetify.openComponentDocs",
        "title": "Open Vuetify Component Documentation",
        "category": "Vuetify"
      }
    ],
    "snippets": [
      {
        "language": "vue",
        "path": "./snippets/vuetify.json"
      },
      {
        "language": "vue-html",
        "path": "./snippets/vuetify.json"
      },
      {
        "language": "html",
        "path": "./snippets/vuetify.json"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/vuetify.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/vuetify.json"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vuetify.openApiDocs",
          "when": "editorTextFocus && resourceLangId == vue",
          "group": "vuetify@1"
        },
        {
          "command": "vuetify.openComponentDocs",
          "when": "editorTextFocus && resourceLangId == vue",
          "group": "vuetify@2"
        }
      ]
    },
    "configuration": {
      "title": "Vuetify",
      "properties": {
        "vuetify.message": {
          "type": "string",
          "default": "Hello World",
          "description": "The message to show in the notification"
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown --env.NODE_ENV production",
    "dev": "tsdown --watch ./src --env.NODE_ENV development",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "pnpm run build",
    "generate:map": "node scripts/generate-map.mjs",
    "generate:snippets": "node scripts/generate-snippets.mjs"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/vscode": "1.107.0",
    "@vuetify/cli-shared": "workspace:*",
    "giget": "catalog:",
    "nypm": "catalog:",
    "pathe": "catalog:",
    "reactive-vscode": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  }
}
